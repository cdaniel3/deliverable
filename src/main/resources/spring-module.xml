<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
		<property name="username" value="deliv_read"/>
        <property name="password" value="password"/>
        <property name="url">
        	<!-- Raspberry Pi mysql server -->
        	<!-- <value>jdbc:mysql://10.0.0.14:3306/deliverable_db?useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</value> -->
        	<!-- Windows 10 local mysql server -->
        	<value>jdbc:mysql://localhost:3306/deliverable_db?useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</value>
        </property>
    </bean>
	
	<bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
	    <property name="dataSource" ref="dataSource"/>
	    <property name="annotatedClasses">
			<list>
				<value>com.deliverable.model.Ticket</value>
				<value>com.deliverable.model.TicketType</value>
				<value>com.deliverable.model.Priority</value>
				<value>com.deliverable.model.Status</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
				<prop key="hibernate.show_sql">false</prop>
			</props>
		</property>
	</bean>
	
	<bean id="txManager" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
    	<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	
	<bean id="ticketDAO" class="com.deliverable.poc.dao.TicketDAOImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
</beans>